  <div id="message">
    m tha lá»—i choa t thiá»‡c háº£aa, Ä‘á»«ng dá»—i t ná»¯a nhen t bÃ¹n lá»›m á»›, m dá»—i t lÃ  t bá»‹ bá»‹t má» Ã¡ hog bÃ­t ns j cho zui Ã¢u t thuong m mÃ²ooğŸ¥ºğŸ«°ğŸ»ğŸª¿
  </div>

  <script>
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const message = document.getElementById("message");

    const noTexts = ["KhÃ´ng", "CÃ³ cá»¥c cá»©c", "Äáº¿ch", "ÄÃ¡ch", "MÆ¡ Ä‘i cÆ°ng","no no"];
    const yesTexts = [
      "ngan ctee báº¥m coÃ¡aaa ikğŸ˜˜",
      "Báº¥m zÃ´ Ä‘Ã¢y ikkğŸ˜™",
      "á» Ä‘Ã¢y mÃ aaağŸª¿",
      "Ä‘á»«ng bá» t mÃ²ooğŸ˜¢",
      "Chs cÃ¹ng t ikk mÃ²ooğŸ«°ğŸ»",
      "Äá»«ng dá»—i t ná»¯a nhaaa choa t xin lÅ©iii m má» t bÃ¹n lá»›m á»›ğŸ¥ºğŸ¥º"
    ];

    let noClickCount = 0;    
    let yesClickCount = 0;   
    let yesSize = 20;        

    function advanceYesTextFromNo() {
      if (yesClickCount < yesTexts.length) {
        yesBtn.innerText = yesTexts[yesClickCount];
        yesClickCount++;
      } else {
        yesBtn.innerText = yesTexts[yesTexts.length - 1];
      }
    }

    noBtn.addEventListener("click", () => {
      if (noClickCount < noTexts.length) {
        noBtn.innerText = noTexts[noClickCount];
      }
      noClickCount++;

      advanceYesTextFromNo();

      yesSize += 18;
      yesBtn.style.fontSize = yesSize + "px";
      yesBtn.style.padding = (yesSize/2) + "px " + (yesSize) + "px";

      if (noClickCount >= noTexts.length) {
        noBtn.style.display = "none";
      }
    });

    yesBtn.addEventListener("click", () => {
      message.style.display = "block";
      noBtn.style.display = "none";
      yesBtn.style.display = "none";
    });
  </script>
