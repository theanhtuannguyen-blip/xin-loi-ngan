  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    body {
      text-align: center;
      font-family: Arial, sans-serif;
      margin-top: 60px;
      background: #ffeef5;
    }
    h1 {
      color: #ff4d6d;
      margin-bottom: 30px;
    }
    .btn {
      padding: 15px 40px;
      font-size: 20px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      margin: 20px;
      transition: all 0.25s ease;
      box-shadow: 0 6px 14px rgba(0,0,0,0.08);
    }
    #noBtn {
      background: #ccc;
      color: #333;
    }
    #yesBtn {
      background: #ff99c8;
      color: #fff;
    }
    #message {
      margin-top: 40px;
      font-size: 22px;
      font-weight: 700;
      color: #d63384;
      display: none;
    }
  </style>
